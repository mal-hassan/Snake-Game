{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/usr/local/opt/raylib/include",  // Include Raylib headers
                "-L/usr/local/opt/raylib/lib",      // Link Raylib library
                "-lraylib",                         // Link Raylib library
                "-framework", "CoreVideo",
                "-framework", "IOKit",
                "-framework", "Cocoa",
                "-framework", "OpenGL",             // Use OpenGL framework
                "-framework", "AudioToolbox",
                "-framework", "AudioUnit",
                "-framework", "CoreAudio",
                "-framework", "CoreServices"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}